<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Be My Valentine</title>

  <style>
    body {
      font-family: 'Poppins', Arial, sans-serif;
      background: linear-gradient(135deg, #ff4d6d, #ff758f);
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      color: white;
      text-align: center;
      animation: fadeIn 1.5s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .card {
      background: rgba(255,255,255,0.15);
      padding: 30px;
      border-radius: 25px;
      max-width: 400px;
      width: 90%;
      box-shadow: 0 10px 40px rgba(0,0,0,0.25);
      backdrop-filter: blur(8px);
      animation: popIn 0.8s ease;
    }

    @keyframes popIn {
      0% { transform: scale(0.6); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }

    h1 {
      font-size: 30px;
      margin-bottom: 12px;
    }

    p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    img {
      width: 100%;
      border-radius: 15px;
      margin-bottom: 20px;
    }

    button {
      font-size: 17px;
      padding: 12px 25px;
      border: none;
      border-radius: 30px;
      margin: 10px;
      cursor: pointer;
      transition: transform 0.2s;
    }

    #yes {
      background: #2ecc71;
      color: white;
      animation: bounce 1.5s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-6px); }
    }

    #no {
      background: #e74c3c;
      color: white;
      position: absolute;
    }

    .heart {
      position: fixed;
      bottom: -10px;
      color: white;
      font-size: 20px;
      animation: floatUp 5s linear infinite;
      opacity: 0.8;
    }

    @keyframes floatUp {
      0% { transform: translateY(0) translateX(0); opacity: 1; }
      100% { transform: translateY(-120vh) translateX(40px); opacity: 0; }
    }

    .confetti {
      position: fixed;
      width: 10px;
      height: 10px;
      background: #fff;
      border-radius: 50%;
      animation: confettiFall 3s ease-out forwards;
    }

    @keyframes confettiFall {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }
  </style>
</head>

<body>
  <div class="card">
    <h1>Hey Love ❤️</h1>
    <p>My Dhanu, will you be my Valentine?</p>
    <img src="/attachments/Z5MQoGWbGMbJZFfiU5fLQ.jpeg" alt="Us together" />
    <button id="yes" onclick="sayYes()">Yes</button>
    <button id="no" onmouseover="moveNo()">No</button>
  </div>

  <script>
    function sayYes() {
      document.body.innerHTML = `
        <div style="
          height:100vh;
          display:flex;
          justify-content:center;
          align-items:center;
          flex-direction:column;
          background:linear-gradient(135deg, #ff4d6d,#ff758f);
          color:white;
          font-family:Poppins, Arial;
          text-align:center;
          animation: fadeIn 1.5s;">
          
          <h1 style="font-size:45px; animation: popIn 1s;">YAYYYY! ❤️</h1>
          <p style="font-size:24px; max-width:500px;">
            You just made me the happiest person alive, Dhanu!  
            I love you more than words can ever say ❤️
          </p>
        </div>
      `;
      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement("div");
        confetti.classList.add("confetti");
        confetti.style.left = Math.random() * window.innerWidth + "px";
        confetti.style.top = "-20px";
        confetti.style.background = `hsl(${Math.random()*360}, 100%, 70%)`;
        confetti.style.animationDuration = (2 + Math.random() * 2) + "s";
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 4000);
      }
    }

    function moveNo() {
      const button = document.getElementById("no");
      const x = Math.random() * (window.innerWidth - 150);
      const y = Math.random() * (window.innerHeight - 100);
      button.style.left = x + "px";
      button.style.top = y + "px";
    }

    setInterval(() => {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.innerHTML = "❤️";
      heart.style.left = Math.random() * window.innerWidth + "px";
      heart.style.fontSize = (20 + Math.random() * 25) + "px";
      heart.style.animationDuration = (4 + Math.random() * 3) + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 7000);
    }, 450);
  </script>
</body>
</html>
